includes:
    - vendor/phpstan/phpstan-symfony/extension.neon

parameters:
    level: 5
    paths:
        - src
    tmpDir: .phpstan/cache
    parallel:
        maximumNumberOfProcesses: 4
    excludePaths:
        # Configuración de DI excluida
        - src/DependencyInjection/Configuration.php
        # Archivos que dependen de Sonata (dependencia opcional)
        - src/Admin
        - src/Service/MediaStorageService.php
        # Archivos que dependen de Symfony Form (dependencia opcional)
        - src/Form
        - src/Controller
    treatPhpDocTypesAsCertain: false
    reportUnmatchedIgnoredErrors: false
    ignoreErrors:
        # Propiedades preparadas para futuro uso
        - '#Property .+::\$fallbackModels is never read, only written#'
        # Symfony generics (común en bundles)
        - '#generic class Symfony\\Component\\DependencyInjection\\.+ but does not specify its types#'
        - '#generic interface Symfony\\Contracts\\EventDispatcher\\EventDispatcherInterface but does not specify its types#'
