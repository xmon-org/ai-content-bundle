{% block xmon_ai_image_scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Configuration from Twig
    var routes = {{ routes|json_encode|raw }};
    var globalStylePreview = {{ globalStylePreview|json_encode|raw }};
    var presetsData = {{ presets|json_encode|raw }};
    var stylesData = {{ stylesData|default({})|json_encode|raw }};
    var compositionsData = {{ compositionsData|default({})|json_encode|raw }};
    var palettesData = {{ palettesData|default({})|json_encode|raw }};
    var styleSuffix = {{ styleSuffix|default('')|json_encode|raw }};

    // History limit configuration
    var historyLimit = {{ historyLimit|default(5) }};

    // ========================================
    // Mode Toggle: Simple / Expert
    // ========================================
    var STORAGE_KEY_MODE = 'xmon_ai_image_mode';
    var currentMode = localStorage.getItem(STORAGE_KEY_MODE) || 'simple';

    function initModeToggle() {
        var btnModeSimple = document.getElementById('btnModeSimple');
        var btnModeExpert = document.getElementById('btnModeExpert');

        if (!btnModeSimple || !btnModeExpert) return;

        // Set initial mode
        setMode(currentMode);

        // Event listeners
        btnModeSimple.addEventListener('click', function() {
            setMode('simple');
        });

        btnModeExpert.addEventListener('click', function() {
            setMode('expert');
        });
    }

    function setMode(mode) {
        currentMode = mode;

        // Apply mode class to body (so it affects modals outside .xmon-ai-image-page too)
        document.body.classList.remove('mode-simple', 'mode-expert');
        document.body.classList.add('mode-' + mode);

        // Update toggle buttons
        var btnModeSimple = document.getElementById('btnModeSimple');
        var btnModeExpert = document.getElementById('btnModeExpert');

        if (btnModeSimple && btnModeExpert) {
            btnModeSimple.classList.toggle('active', mode === 'simple');
            btnModeExpert.classList.toggle('active', mode === 'expert');
            btnModeSimple.setAttribute('aria-pressed', mode === 'simple');
            btnModeExpert.setAttribute('aria-pressed', mode === 'expert');
        }

        // Persist
        localStorage.setItem(STORAGE_KEY_MODE, mode);

        // If switching to simple, force styleMode to 'global'
        if (mode === 'simple') {
            var globalRadio = document.getElementById('styleModeGlobal');
            if (globalRadio && !globalRadio.checked) {
                globalRadio.checked = true;
                globalRadio.dispatchEvent(new Event('change'));
            }
        }
    }

    // Initialize mode toggle
    initModeToggle();

    // DOM elements
    var subjectField = document.getElementById('subjectField');
    var btnGeneratePrompt = document.getElementById('btnGeneratePrompt');
    var btnRegenerateImage = document.getElementById('btnRegenerateImage');
    // Status message elements - separate for prompt and image areas
    var promptStatusMessage = document.getElementById('promptStatusMessage');
    var promptStatusContent = document.getElementById('promptStatusContent');
    var promptStatusText = document.getElementById('promptStatusText');
    var imageStatusMessage = document.getElementById('imageStatusMessage');
    var imageStatusContent = document.getElementById('imageStatusContent');
    var imageStatusText = document.getElementById('imageStatusText');
    var newImagePlaceholder = document.getElementById('newImagePlaceholder');
    var newImageLoading = document.getElementById('newImageLoading');
    var newImage = document.getElementById('newImage');
    var newImageFooter = document.getElementById('newImageFooter');
    var charCount = document.getElementById('charCount');
    var timeElapsed = document.getElementById('timeElapsed');
    var confirmModal = $('#confirmModal');
    var confirmModalBody = document.getElementById('confirmModalBody');
    var confirmModalBtn = document.getElementById('confirmModalBtn');

    // History limit modal elements
    var historyLimitModal = $('#historyLimitModal');
    var historyLimitList = document.getElementById('historyLimitList');
    var selectedCountSpan = document.getElementById('selectedCount');
    var totalCountSpan = document.getElementById('totalCount');
    var btnDeleteAndGenerate = document.getElementById('btnDeleteAndGenerate');
    var selectedHistoryIds = new Set();

    // Lightbox modal elements
    var imageLightboxModal = $('#imageLightboxModal');
    var lightboxImage = document.getElementById('lightboxImage');
    var lightboxCaption = document.getElementById('lightboxCaption');
    var lightboxCounter = document.getElementById('lightboxCounter');
    var lightboxPrev = document.getElementById('lightboxPrev');
    var lightboxNext = document.getElementById('lightboxNext');
    var lightboxUseBtn = document.getElementById('lightboxUseBtn');
    var lightboxDeleteBtn = document.getElementById('lightboxDeleteBtn');
    var lightboxCurrentBadge = document.getElementById('lightboxCurrentBadge');
    var lightboxModelText = document.getElementById('lightboxModelText');
    var lightboxDateText = document.getElementById('lightboxDateText');

    // Lightbox state
    var lightboxImages = [];
    var lightboxCurrentIndex = 0;

    // Style elements
    var styleModeRadios = document.querySelectorAll('input[name="styleMode"]');
    var presetSelect = document.getElementById('presetSelect');
    var customStyleFields = document.getElementById('customStyleFields');
    var stylePreview = document.getElementById('stylePreview');
    var customStyle = document.getElementById('customStyle');
    var customComposition = document.getElementById('customComposition');
    var customPalette = document.getElementById('customPalette');
    var customExtra = document.getElementById('customExtra');

    var elapsedTimer = null;
    var elapsedSeconds = 0;
    var promptHistoryData = [];

    // Prompt history elements
    var promptHistoryToggle = document.getElementById('promptHistoryToggle');
    var promptHistoryPanel = document.getElementById('promptHistoryPanel');
    var promptHistoryList = document.getElementById('promptHistoryList');
    var historyCountSpan = document.getElementById('historyCount');

    // Collapsible controls panel
    var mainRow = document.getElementById('mainRow');
    var controlsColumn = document.getElementById('controlsColumn');
    var btnCollapseControls = document.getElementById('btnCollapseControls');
    var STORAGE_KEY = 'xmon_ai_image_controls_collapsed';

    // Initialize collapsed state from localStorage
    function initControlsCollapsed() {
        var isCollapsed = localStorage.getItem(STORAGE_KEY) === 'true';
        if (isCollapsed) {
            controlsColumn.classList.add('collapsed');
            mainRow.classList.add('controls-collapsed');
        }
    }

    // Toggle controls panel
    function toggleControls() {
        var isCollapsed = controlsColumn.classList.toggle('collapsed');
        mainRow.classList.toggle('controls-collapsed', isCollapsed);
        localStorage.setItem(STORAGE_KEY, isCollapsed ? 'true' : 'false');

        // Update tooltip and ARIA
        if (btnCollapseControls) {
            btnCollapseControls.title = isCollapsed
                ? '{{ "Expand panel"|trans }}'
                : '{{ "Collapse panel"|trans }}';
            btnCollapseControls.setAttribute('aria-expanded', isCollapsed ? 'false' : 'true');
        }
    }

    if (btnCollapseControls) {
        btnCollapseControls.addEventListener('click', function(e) {
            e.stopPropagation();
            toggleControls();
        });
    }

    // Click on collapsed rail to expand
    var controlsBox = document.getElementById('controlsBox');
    if (controlsBox) {
        controlsBox.addEventListener('click', function(e) {
            if (controlsColumn.classList.contains('collapsed')) {
                // Only toggle if clicking on the rail itself, not on buttons
                if (e.target === this || e.target.classList.contains('collapsed-label') ||
                    e.target.closest('.box-header')) {
                    toggleControls();
                }
            }
        });
    }

    // Initialize on load
    initControlsCollapsed();

    // Set initial tooltip and ARIA
    if (btnCollapseControls && controlsColumn.classList.contains('collapsed')) {
        btnCollapseControls.title = '{{ "Expand panel"|trans }}';
        btnCollapseControls.setAttribute('aria-expanded', 'false');
    }

    // === Utility functions ===

    function escapeHtml(text) {
        var div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    function getSelectedStyleMode() {
        // Support for iCheck (used by Sonata Admin)
        var checkedWrapper = document.querySelector('.iradio_square-blue.checked input[name="styleMode"]');
        if (checkedWrapper) {
            return checkedWrapper.value;
        }
        var checkedNative = document.querySelector('input[name="styleMode"]:checked');
        return checkedNative ? checkedNative.value : 'global';
    }

    /**
     * Show status message in a specific area
     * @param {HTMLElement} containerEl - The container (.xmon-status-message)
     * @param {HTMLElement} contentEl - The content div (.xmon-status-content)
     * @param {HTMLElement} textEl - The text span (.xmon-status-text)
     * @param {string} message - Message to display
     * @param {string} type - 'success', 'danger', 'warning', 'info'
     */
    function showStatusMessage(containerEl, contentEl, textEl, message, type) {
        if (!containerEl || !contentEl || !textEl) return;
        contentEl.className = 'xmon-status-content status-' + type;
        textEl.textContent = message;
        containerEl.style.display = 'block';
    }

    function hideStatusMessage(containerEl) {
        if (containerEl) {
            containerEl.style.display = 'none';
        }
    }

    // Convenience functions for prompt and image status
    function showPromptStatus(message, type) {
        showStatusMessage(promptStatusMessage, promptStatusContent, promptStatusText, message, type);
    }

    function hidePromptStatus() {
        hideStatusMessage(promptStatusMessage);
    }

    function showImageStatus(message, type) {
        showStatusMessage(imageStatusMessage, imageStatusContent, imageStatusText, message, type);
    }

    function hideImageStatus() {
        hideStatusMessage(imageStatusMessage);
    }

    // === History limit modal functions ===

    function getCurrentHistoryCount() {
        return document.querySelectorAll('.historial-item').length;
    }

    function isAtHistoryLimit() {
        return getCurrentHistoryCount() >= historyLimit;
    }

    function buildHistoryLimitList() {
        var items = document.querySelectorAll('.historial-item');
        var html = '';

        items.forEach(function(item) {
            var id = item.dataset.id;
            var isActual = item.querySelector('.historial-actual') !== null;
            var img = item.querySelector('.historial-image-wrapper img');
            var subjectEl = item.querySelector('.historial-subject');
            var styleEl = item.querySelector('.historial-style');
            var dateEl = item.querySelector('.historial-meta small');

            var subject = subjectEl ? subjectEl.textContent.trim() : '';
            var style = styleEl ? styleEl.textContent.trim() : '';
            var date = dateEl ? dateEl.textContent.trim() : '';
            var imgSrc = img ? img.src : '';

            html += '<div class="history-limit-item" style="display: flex; align-items: center; padding: 12px 15px; border-bottom: 1px solid #eee; background: ' + (isActual ? '#fff9e6' : 'white') + ';">';

            if (isActual) {
                html += '<span style="width: 30px; text-align: center; color: #999;" title="{{ "Current image - cannot delete"|trans }}"><i class="fa fa-lock"></i></span>';
            } else {
                html += '<input type="checkbox" class="history-limit-checkbox" data-id="' + id + '" style="width: 18px; height: 18px; margin-right: 12px; cursor: pointer;">';
            }

            html += '<div style="width: 80px; height: 60px; margin-right: 15px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; border-radius: 4px; overflow: hidden; flex-shrink: 0;">';
            if (imgSrc) {
                html += '<img src="' + imgSrc + '" style="max-width: 100%; max-height: 100%; object-fit: cover;">';
            }
            html += '</div>';

            html += '<div style="flex: 1; min-width: 0;">';
            html += '<div style="font-weight: 600; font-size: 13px; margin-bottom: 3px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">' + escapeHtml(subject || '{{ "No description"|trans }}') + '</div>';
            if (style) {
                html += '<div style="font-size: 11px; color: #888; font-style: italic; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">' + escapeHtml(style) + '</div>';
            }
            html += '<div style="font-size: 11px; color: #777;">' + date + '</div>';
            html += '</div>';

            if (isActual) {
                html += '<span class="label label-warning" style="margin-left: 10px; white-space: nowrap;"><i class="fa fa-star"></i> {{ "Current"|trans }}</span>';
            }

            html += '</div>';
        });

        historyLimitList.innerHTML = html;

        // Bind checkbox events
        document.querySelectorAll('.history-limit-checkbox').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                var id = this.dataset.id;
                if (this.checked) {
                    selectedHistoryIds.add(id);
                } else {
                    selectedHistoryIds.delete(id);
                }
                updateSelectedCount();
            });
        });

        // Update total count
        if (totalCountSpan) {
            totalCountSpan.textContent = items.length;
        }
    }

    function updateSelectedCount() {
        var count = selectedHistoryIds.size;
        if (selectedCountSpan) {
            selectedCountSpan.textContent = count;
        }
        if (btnDeleteAndGenerate) {
            btnDeleteAndGenerate.disabled = count === 0;
        }
    }

    function resetHistoryModal() {
        selectedHistoryIds.clear();
        updateSelectedCount();
        document.querySelectorAll('.history-limit-checkbox').forEach(function(cb) {
            cb.checked = false;
        });
        if (btnDeleteAndGenerate) {
            btnDeleteAndGenerate.disabled = true;
            btnDeleteAndGenerate.innerHTML = '<i class="fa fa-trash"></i> {{ "Delete and Generate"|trans }}';
        }
    }

    function showHistoryLimitModal() {
        buildHistoryLimitList();
        resetHistoryModal();
        historyLimitModal.modal('show');
    }

    function hideAllStatus() {
        hidePromptStatus();
        hideImageStatus();
    }

    function startTimer() {
        elapsedSeconds = 0;
        timeElapsed.textContent = '0s';
        elapsedTimer = setInterval(function() {
            elapsedSeconds++;
            timeElapsed.textContent = elapsedSeconds + 's';
        }, 1000);
    }

    function stopTimer() {
        if (elapsedTimer) {
            clearInterval(elapsedTimer);
            elapsedTimer = null;
        }
    }

    // === Prompt history functions ===

    function addToPromptHistory(prompt) {
        if (!prompt || prompt.trim() === '') return;

        // Avoid duplicates
        var exists = promptHistoryData.some(function(item) {
            return item === prompt;
        });
        if (exists) return;

        promptHistoryData.unshift(prompt);
        if (promptHistoryData.length > 3) {
            promptHistoryData = promptHistoryData.slice(0, 3);
        }

        renderPromptHistory();
    }

    function renderPromptHistory() {
        if (!promptHistoryToggle || !promptHistoryList) return;

        if (promptHistoryData.length === 0) {
            promptHistoryToggle.style.display = 'none';
            return;
        }

        promptHistoryToggle.style.display = 'inline-block';
        if (historyCountSpan) {
            historyCountSpan.textContent = promptHistoryData.length;
        }

        promptHistoryList.innerHTML = '';
        promptHistoryData.forEach(function(prompt) {
            var item = document.createElement('button');
            item.type = 'button';
            item.className = 'prompt-history-item';
            if (prompt === subjectField.value) {
                item.className += ' active';
            }
            item.textContent = prompt.substring(0, 80) + (prompt.length > 80 ? '...' : '');
            item.title = prompt;

            item.onclick = function() {
                subjectField.value = prompt;
                // Update character count
                if (charCount) {
                    charCount.textContent = '(' + subjectField.value.length + ' {{ "characters"|trans }})';
                }
                updateStylePreview();
                if (promptHistoryPanel) {
                    $(promptHistoryPanel).collapse('hide');
                }
            };

            promptHistoryList.appendChild(item);
        });
    }

    // === Image history grid functions ===

    function updateHistorialCount() {
        var count = document.querySelectorAll('.historial-item').length;
        var badge = document.getElementById('historialCount');
        if (badge) {
            badge.textContent = count;
        }
    }

    function addToHistorialGrid(item) {
        var grid = document.getElementById('historialGrid');
        var emptyMsg = document.getElementById('historialEmpty');

        // Hide empty message if exists
        if (emptyMsg) {
            emptyMsg.style.display = 'none';
        }

        // Create grid if doesn't exist
        if (!grid) {
            var boxBody = document.querySelector('#historialBox .box-body');
            if (boxBody) {
                grid = document.createElement('div');
                grid.className = 'row';
                grid.id = 'historialGrid';
                boxBody.appendChild(grid);
            }
        }

        if (!grid) return;

        var subject = item.subject || '';
        var style = item.style || '';
        var subjectTruncated = subject.length > 60 ? subject.substring(0, 60) + '...' : subject;
        var styleTruncated = style.length > 80 ? style.substring(0, 80) + '...' : style;

        var newCard = document.createElement('div');
        newCard.className = 'col-sm-6 col-md-4 historial-item';
        newCard.dataset.id = item.id;
        newCard.dataset.mediaId = item.mediaId;

        var styleHtml = style ?
            '<p class="historial-style" title="' + escapeHtml(style) + '" style="font-size: 11px; color: #999; margin: 0 0 8px; line-height: 1.3; font-style: italic;">' +
            '<i class="fa fa-paint-brush" style="font-size: 10px;"></i> ' + escapeHtml(styleTruncated) + '</p>' : '';

        var modelName = item.model || '';
        var modelHtml = modelName ?
            '<br><i class="fa fa-cog"></i> ' + escapeHtml(modelName) : '';

        newCard.innerHTML =
            '<div class="thumbnail historial-card">' +
                '<div class="historial-image-wrapper">' +
                    '<img src="' + item.imageUrl + '" alt="{{ "Image generated on"|trans }} ' + item.createdAt + '">' +
                    '<div class="historial-image-overlay" data-image-url="' + item.imageUrl + '" data-image-alt="' + escapeHtml(subject) + '" data-image-style="' + escapeHtml(style) + '" data-image-model="' + escapeHtml(modelName) + '" data-image-date="' + escapeHtml(item.createdAt) + '" title="{{ "View full size"|trans }}">' +
                        '<i class="fa fa-search-plus"></i>' +
                    '</div>' +
                '</div>' +
                '<div class="caption">' +
                    '<p class="historial-subject" data-mode="expert" title="' + escapeHtml(subject) + '" style="font-size: 13px; font-weight: 600; color: #333; margin: 8px 0 5px; line-height: 1.4; min-height: 36px;">' +
                        escapeHtml(subjectTruncated) +
                    '</p>' +
                    styleHtml +
                    '<div class="historial-meta">' +
                        '<small class="text-muted"><i class="fa fa-clock-o"></i> ' + item.createdAt + modelHtml + '</small>' +
                    '</div>' +
                    '<div class="historial-actions">' +
                        '<button type="button" class="btn btn-sm btn-primary btn-use-image" data-id="' + item.id + '" title="{{ "Use this image"|trans }}">' +
                            '<i class="fa fa-check"></i> {{ "Use"|trans }}' +
                        '</button>' +
                        '<button type="button" class="btn btn-sm btn-danger btn-delete-image" data-id="' + item.id + '" title="{{ "Delete from history"|trans }}">' +
                            '<i class="fa fa-trash"></i>' +
                        '</button>' +
                    '</div>' +
                '</div>' +
            '</div>';

        // Insert at beginning
        grid.insertBefore(newCard, grid.firstChild);

        // Bind event listeners to new buttons
        var useBtn = newCard.querySelector('.btn-use-image');
        var deleteBtn = newCard.querySelector('.btn-delete-image');

        if (useBtn) {
            useBtn.addEventListener('click', function() {
                handleUseImage(this);
            });
        }

        if (deleteBtn) {
            deleteBtn.addEventListener('click', function() {
                handleDeleteImage(this);
            });
        }

        // Bind overlay click for lightbox
        var overlay = newCard.querySelector('.historial-image-overlay');
        if (overlay) {
            overlay.addEventListener('click', function() {
                handleImageOverlayClick(this);
            });
        }

        updateHistorialCount();
    }

    // === Style handling ===

    function updateStyleVisibility() {
        var selectedMode = getSelectedStyleMode();
        var presetContainer = document.getElementById('presetSelectContainer');
        var globalStyleHint = document.getElementById('globalStyleHint');

        if (globalStyleHint) {
            globalStyleHint.style.display = selectedMode === 'global' ? 'block' : 'none';
        }
        if (presetContainer) {
            presetContainer.style.display = selectedMode === 'preset' ? 'block' : 'none';
        }
        if (customStyleFields) {
            customStyleFields.style.display = selectedMode === 'custom' ? 'block' : 'none';
        }

        updateStylePreview();
    }

    function updateStylePreview() {
        var selectedMode = getSelectedStyleMode();
        var styleText = '';
        var subject = subjectField ? subjectField.value.trim() : '';

        if (selectedMode === 'global') {
            // Global style already includes suffix (comes from server)
            styleText = globalStylePreview;
        } else if (selectedMode === 'preset' && presetSelect) {
            var presetKey = presetSelect.value;
            if (presetKey && presetsData[presetKey]) {
                styleText = presetsData[presetKey].preview || '';
                // Add suffix if exists
                if (styleSuffix && styleText) {
                    styleText = styleText + ', ' + styleSuffix;
                }
            } else {
                stylePreview.innerHTML = '<em class="text-warning">{{ "Select a preset from the list..."|trans }}</em>';
                return;
            }
        } else if (selectedMode === 'custom') {
            var parts = [];
            // Use prompt data instead of labels
            if (customStyle && customStyle.value && stylesData[customStyle.value]) {
                parts.push(stylesData[customStyle.value].prompt);
            }
            if (customComposition && customComposition.value && compositionsData[customComposition.value]) {
                parts.push(compositionsData[customComposition.value].prompt);
            }
            if (customPalette && customPalette.value && palettesData[customPalette.value]) {
                parts.push(palettesData[customPalette.value].prompt);
            }
            if (customExtra && customExtra.value) {
                parts.push(customExtra.value);
            }
            styleText = parts.join(', ') || '{{ "Select style options above"|trans }}';
            // Add suffix if exists
            if (styleSuffix && styleText && styleText !== '{{ "Select style options above"|trans }}') {
                styleText = styleText + ', ' + styleSuffix;
            }
        }

        var subjectHtml = subject
            ? '<strong>' + escapeHtml(subject) + '</strong>'
            : '<em style="color: #999;">[{{ "enter a description above"|trans }}]</em>';

        var previewContent =
            '<span class="preview-subject">' + subjectHtml + '</span>' +
            '<span class="preview-style">' + escapeHtml(styleText) + '</span>';

        stylePreview.innerHTML = previewContent;
    }

    function getStyleConfig() {
        var selectedMode = getSelectedStyleMode();

        if (selectedMode === 'global') {
            return { styleMode: 'global' };
        }

        if (selectedMode === 'preset' && presetSelect) {
            return {
                styleMode: 'preset',
                stylePreset: presetSelect.value
            };
        }

        if (selectedMode === 'custom') {
            return {
                styleMode: 'custom',
                styleStyle: customStyle ? customStyle.value : '',
                styleComposition: customComposition ? customComposition.value : '',
                stylePalette: customPalette ? customPalette.value : '',
                styleExtra: customExtra ? customExtra.value : ''
            };
        }

        return { styleMode: 'global' };
    }

    // === Event listeners ===

    // Character count
    if (subjectField) {
        subjectField.addEventListener('input', function() {
            if (charCount) {
                charCount.textContent = '(' + this.value.length + ' {{ "characters"|trans }})';
            }
            updateStylePreview();
        });
        // Initialize
        if (charCount) {
            charCount.textContent = '(' + subjectField.value.length + ' {{ "characters"|trans }})';
        }
    }

    // Style mode changes (iCheck support)
    if (typeof $ !== 'undefined') {
        $('input[name="styleMode"]').on('ifChecked', updateStyleVisibility);
        $('#presetSelect').on('change', updateStylePreview);
        $('#customStyle, #customComposition, #customPalette').on('change', updateStylePreview);
    }

    // Native fallback
    styleModeRadios.forEach(function(radio) {
        radio.addEventListener('change', updateStyleVisibility);
    });
    if (presetSelect) presetSelect.addEventListener('change', updateStylePreview);
    if (customStyle) customStyle.addEventListener('change', updateStylePreview);
    if (customComposition) customComposition.addEventListener('change', updateStylePreview);
    if (customPalette) customPalette.addEventListener('change', updateStylePreview);
    if (customExtra) customExtra.addEventListener('input', updateStylePreview);

    // Prompt history items
    document.querySelectorAll('.prompt-history-item').forEach(function(item) {
        item.addEventListener('click', function() {
            if (subjectField) {
                subjectField.value = this.dataset.subject || '';
                updateStylePreview();
            }
        });
    });

    // Generate subject button
    if (btnGeneratePrompt) {
        btnGeneratePrompt.addEventListener('click', function() {
            var btn = this;

            // Save current subject to history BEFORE replacing it
            var currentSubject = subjectField ? subjectField.value.trim() : '';
            if (currentSubject) {
                addToPromptHistory(currentSubject);
            }

            btn.disabled = true;
            btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> {{ "Generating..."|trans }}';

            fetch(routes.generateSubject, {
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(function(response) { return response.json(); })
            .then(function(data) {
                if (data.success) {
                    subjectField.value = data.prompt || '';
                    showPromptStatus('{{ "Description generated successfully"|trans }}', 'success');
                    updateStylePreview();
                    // Note: New prompt is NOT added to history until it's actually used
                    // (either by generating another prompt or by generating an image)
                } else {
                    showPromptStatus(data.error || '{{ "Error generating description"|trans }}', 'danger');
                }
            })
            .catch(function(error) {
                showPromptStatus('{{ "Network error"|trans }}: ' + error.message, 'danger');
            })
            .finally(function() {
                btn.disabled = false;
                btn.innerHTML = '<i class="fa fa-magic"></i> {{ "Generate description with AI"|trans }}';
            });
        });
    }

    // === Image generation function (extracted for reuse) ===

    function doGenerateImage() {
        var subject = subjectField ? subjectField.value.trim() : '';
        if (!subject) {
            showImageStatus('{{ "Please enter a description first"|trans }}', 'warning');
            return;
        }

        btnRegenerateImage.disabled = true;
        btnRegenerateImage.innerHTML = '<i class="fa fa-spinner fa-spin"></i> {{ "Generating..."|trans }}';

        newImagePlaceholder.style.display = 'none';
        newImageLoading.style.display = 'block';
        newImage.style.display = 'none';
        newImageFooter.style.display = 'none';
        hideImageStatus();
        startTimer();

        var formData = new FormData();
        formData.append('prompt', subject);

        // Add selected model (if model selector exists)
        var modelSelect = document.getElementById('imageModel');
        if (modelSelect) {
            formData.append('model', modelSelect.value);
        }

        // Add debug mode (if toggle exists and is checked)
        var debugCheckbox = document.getElementById('aiDebugMode');
        if (debugCheckbox && debugCheckbox.checked) {
            formData.append('debug', '1');
        }

        var styleConfig = getStyleConfig();
        Object.keys(styleConfig).forEach(function(key) {
            formData.append(key, styleConfig[key]);
        });

        fetch(routes.regenerateImage, {
            method: 'POST',
            headers: { 'X-Requested-With': 'XMLHttpRequest' },
            body: formData
        })
        .then(function(response) { return response.json(); })
        .then(function(data) {
            if (data.success) {
                // Add timestamp to avoid cache
                var timestamp = new Date().getTime();
                newImage.src = data.imageUrl + '?' + timestamp;
                newImage.style.display = 'block';
                newImageLoading.style.display = 'none';
                newImageFooter.style.display = 'block';
                showImageStatus('{{ "Image generated successfully. Click Use to apply it."|trans }}', 'success');

                // Add to prompt history
                addToPromptHistory(subject);

                // Add to image history grid dynamically
                addToHistorialGrid({
                    id: data.historialId,
                    mediaId: data.mediaId,
                    imageUrl: data.imageUrl + '?' + timestamp,
                    subject: data.subject || subject,
                    style: data.style || '',
                    model: data.model || '',
                    createdAt: '{{ "Now"|trans }}'
                });
            } else {
                newImagePlaceholder.style.display = 'block';
                newImageLoading.style.display = 'none';
                showImageStatus(data.error || '{{ "Error generating image"|trans }}', 'danger');
            }
        })
        .catch(function(error) {
            newImagePlaceholder.style.display = 'block';
            newImageLoading.style.display = 'none';
            showImageStatus('{{ "Network error"|trans }}: ' + error.message, 'danger');
        })
        .finally(function() {
            stopTimer();
            btnRegenerateImage.disabled = false;
            btnRegenerateImage.innerHTML = '<i class="fa fa-refresh"></i> {{ "Generate image"|trans }}';
        });
    }

    // Model selector - update cost indicators when changed
    var modelSelect = document.getElementById('imageModel');
    var modelCostInfo = document.getElementById('modelCostInfo');
    var costIndicator = document.getElementById('costIndicator');
    var costModelName = document.getElementById('costModelName');
    var costPrice = document.getElementById('costPrice');

    function updateModelCost() {
        if (!modelSelect) return;
        var selectedOption = modelSelect.options[modelSelect.selectedIndex];
        if (!selectedOption) return;

        var isFree = selectedOption.getAttribute('data-free') === 'true';
        var price = selectedOption.getAttribute('data-price') || '';
        var modelName = selectedOption.getAttribute('data-name') || selectedOption.textContent.trim();

        // Update the expert mode indicator (inside model selector)
        if (modelCostInfo) {
            if (isFree) {
                modelCostInfo.innerHTML = '<span class="label label-success">{{ "Free"|trans }}</span>';
            } else {
                modelCostInfo.innerHTML = '<strong>' + price + '</strong>';
            }
        }

        // Update the always-visible cost indicator
        if (costIndicator) {
            costIndicator.classList.remove('cost-free', 'cost-paid');
            costIndicator.classList.add(isFree ? 'cost-free' : 'cost-paid');

            if (isFree) {
                costIndicator.innerHTML = '<i class="fa fa-check-circle"></i> ' +
                    '<span>{{ "Free"|trans }} · <span id="costModelName">' + modelName + '</span></span>';
            } else {
                costIndicator.innerHTML = '<i class="fa fa-dollar"></i> ' +
                    '<span><span id="costPrice">' + price + '</span> · <span id="costModelName">' + modelName + '</span></span>';
            }
        }
    }

    if (modelSelect) {
        // Support both native select and Select2 (Sonata Admin uses Select2)
        if (typeof jQuery !== 'undefined') {
            jQuery(modelSelect).on('change', updateModelCost);
        } else {
            modelSelect.addEventListener('change', updateModelCost);
        }
        // Trigger initial update
        updateModelCost();
    }

    // Regenerate image button - checks limit first
    if (btnRegenerateImage) {
        btnRegenerateImage.addEventListener('click', function() {
            var subject = subjectField ? subjectField.value.trim() : '';
            if (!subject) {
                showImageStatus('{{ "Please enter a description first"|trans }}', 'warning');
                return;
            }

            // Check if at history limit
            if (isAtHistoryLimit()) {
                showHistoryLimitModal();
                return;
            }

            // Proceed with generation
            doGenerateImage();
        });
    }

    // Delete and Generate button handler (in limit modal)
    if (btnDeleteAndGenerate) {
        btnDeleteAndGenerate.addEventListener('click', function() {
            if (selectedHistoryIds.size === 0) return;

            var btn = this;
            btn.disabled = true;
            btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> {{ "Deleting..."|trans }}';

            var formData = new FormData();
            selectedHistoryIds.forEach(function(id) {
                formData.append('ids[]', id);
            });

            fetch(routes.batchDeleteHistory, {
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                body: formData
            })
            .then(function(response) { return response.json(); })
            .then(function(data) {
                if (data.success || data.deletedCount > 0) {
                    // Remove deleted items from DOM
                    selectedHistoryIds.forEach(function(id) {
                        var item = document.querySelector('.historial-item[data-id="' + id + '"]');
                        if (item) item.remove();
                    });
                    updateHistorialCount();

                    // Close modal and generate
                    historyLimitModal.modal('hide');

                    // Small delay to let modal close smoothly
                    setTimeout(function() {
                        doGenerateImage();
                    }, 300);
                } else {
                    showImageStatus(data.error || '{{ "Error deleting images"|trans }}', 'danger');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fa fa-trash"></i> {{ "Delete and Generate"|trans }}';
                }
            })
            .catch(function(error) {
                showImageStatus('{{ "Network error"|trans }}: ' + error.message, 'danger');
                btn.disabled = false;
                btn.innerHTML = '<i class="fa fa-trash"></i> {{ "Delete and Generate"|trans }}';
            });
        });
    }

    // Handler functions for use/delete (reusable for dynamically added buttons)
    function handleUseImage(button) {
        var historyId = button.dataset.id;
        var item = button.closest('.historial-item');

        button.disabled = true;
        item.classList.add('removing');

        var url = routes.useHistory.replace('HISTORY_ID', historyId);

        fetch(url, {
            method: 'POST',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(function(response) { return response.json(); })
        .then(function(data) {
            if (data.success) {
                // Remove 'actual' class from all cards
                document.querySelectorAll('.historial-actual').forEach(function(card) {
                    card.classList.remove('historial-actual');
                    var badge = card.querySelector('.historial-badge-actual');
                    if (badge) badge.remove();

                    // Restore buttons
                    var actionsDiv = card.closest('.historial-item').querySelector('.historial-actions');
                    var itemId = card.closest('.historial-item').dataset.id;
                    actionsDiv.innerHTML =
                        '<button type="button" class="btn btn-sm btn-primary btn-use-image" data-id="' + itemId + '" title="{{ "Use this image"|trans }}">' +
                            '<i class="fa fa-check"></i> {{ "Use"|trans }}' +
                        '</button>' +
                        '<button type="button" class="btn btn-sm btn-danger btn-delete-image" data-id="' + itemId + '" title="{{ "Delete from history"|trans }}">' +
                            '<i class="fa fa-trash"></i>' +
                        '</button>';

                    // Re-bind events
                    actionsDiv.querySelector('.btn-use-image').addEventListener('click', function() {
                        handleUseImage(this);
                    });
                    actionsDiv.querySelector('.btn-delete-image').addEventListener('click', function() {
                        handleDeleteImage(this);
                    });
                });

                // Mark new one as actual
                item.classList.remove('removing');
                var thisCard = item.querySelector('.historial-card');
                thisCard.classList.add('historial-actual');

                // Add badge
                var imgWrapper = thisCard.querySelector('.historial-image-wrapper');
                var badge = document.createElement('span');
                badge.className = 'historial-badge-actual';
                badge.innerHTML = '<i class="fa fa-check"></i> {{ "Current"|trans }}';
                imgWrapper.appendChild(badge);

                // Replace buttons with "In use" label
                var actionsDiv = thisCard.querySelector('.historial-actions');
                actionsDiv.innerHTML = '<span class="label label-success"><i class="fa fa-check"></i> {{ "In use"|trans }}</span>';

                // Update current image in left panel
                var currentImage = document.getElementById('currentImage');
                if (currentImage) {
                    currentImage.src = data.imageUrl;
                }

                showImageStatus('{{ "Image updated successfully"|trans }}', 'success');
            } else {
                showImageStatus(data.error || '{{ "Error using image"|trans }}', 'danger');
                button.disabled = false;
                item.classList.remove('removing');
            }
        })
        .catch(function(error) {
            showImageStatus('{{ "Network error"|trans }}: ' + error.message, 'danger');
            button.disabled = false;
            item.classList.remove('removing');
        });
    }

    // === Lightbox functions ===

    function buildLightboxImageList() {
        lightboxImages = [];
        document.querySelectorAll('.historial-item').forEach(function(item) {
            var overlay = item.querySelector('.historial-image-overlay');
            var subjectEl = item.querySelector('.historial-subject');
            if (overlay) {
                var subject = overlay.dataset.imageAlt || (subjectEl ? subjectEl.textContent.trim() : '');
                var style = overlay.dataset.imageStyle || '';
                // Build full prompt: subject + style
                var fullPrompt = subject;
                if (style) {
                    fullPrompt += ', ' + style;
                }
                lightboxImages.push({
                    id: item.dataset.id,
                    imageUrl: overlay.dataset.imageUrl,
                    subject: subject,
                    style: style,
                    caption: fullPrompt,
                    model: overlay.dataset.imageModel || '',
                    date: overlay.dataset.imageDate || '',
                    isActual: item.querySelector('.historial-actual') !== null
                });
            }
        });
    }

    function updateLightboxDisplay() {
        if (lightboxImages.length === 0) return;

        var container = document.getElementById('lightboxImageContainer');
        var current = lightboxImages[lightboxCurrentIndex];

        // Show loading state
        container.classList.add('loading');

        // Preload image
        var tempImg = new Image();
        tempImg.onload = function() {
            lightboxImage.src = current.imageUrl;
            container.classList.remove('loading');
        };
        tempImg.onerror = function() {
            container.classList.remove('loading');
            lightboxImage.alt = '{{ "Error loading image"|trans }}';
        };
        tempImg.src = current.imageUrl;

        // Update alt and caption (don't wait for image)
        lightboxImage.alt = current.caption;
        lightboxCaption.textContent = current.caption;
        lightboxCaption.title = current.caption;
        lightboxCaption.classList.remove('expanded'); // Reset expanded state

        // Update counter
        lightboxCounter.textContent = (lightboxCurrentIndex + 1) + ' / ' + lightboxImages.length;

        // Update navigation buttons
        lightboxPrev.disabled = lightboxCurrentIndex === 0;
        lightboxNext.disabled = lightboxCurrentIndex === lightboxImages.length - 1;

        // Update model and date
        lightboxModelText.textContent = current.model || '{{ "Unknown"|trans }}';
        lightboxDateText.textContent = current.date || '';

        // Update full prompt (expert mode only - visibility controlled by CSS)
        var promptTextEl = document.getElementById('lightboxPromptText');
        if (promptTextEl) {
            var fullPromptText = current.subject || '';
            if (current.style) {
                fullPromptText += '\n\n' + current.style;
            }
            promptTextEl.textContent = fullPromptText;
        }

        // Update current badge and action buttons
        if (current.isActual) {
            lightboxCurrentBadge.style.display = '';
            lightboxUseBtn.style.display = 'none';
            lightboxDeleteBtn.style.display = 'none';
        } else {
            lightboxCurrentBadge.style.display = 'none';
            lightboxUseBtn.style.display = '';
            lightboxDeleteBtn.style.display = '';
        }

        // Store current ID for actions
        lightboxUseBtn.dataset.id = current.id;
        lightboxDeleteBtn.dataset.id = current.id;
    }

    function openImageLightbox(imageUrl, caption) {
        if (!lightboxImage || !imageLightboxModal) return;

        // Build fresh list of images
        buildLightboxImageList();

        // Find index of clicked image
        lightboxCurrentIndex = 0;
        for (var i = 0; i < lightboxImages.length; i++) {
            if (lightboxImages[i].imageUrl === imageUrl) {
                lightboxCurrentIndex = i;
                break;
            }
        }

        updateLightboxDisplay();
        imageLightboxModal.modal('show');
    }

    function lightboxNavigate(direction) {
        var newIndex = lightboxCurrentIndex + direction;
        if (newIndex >= 0 && newIndex < lightboxImages.length) {
            lightboxCurrentIndex = newIndex;
            updateLightboxDisplay();
        }
    }

    function handleImageOverlayClick(overlay) {
        var imageUrl = overlay.dataset.imageUrl;
        var imageAlt = overlay.dataset.imageAlt || '';
        openImageLightbox(imageUrl, imageAlt);
    }

    // Lightbox navigation buttons
    if (lightboxPrev) {
        lightboxPrev.addEventListener('click', function() {
            lightboxNavigate(-1);
        });
    }
    if (lightboxNext) {
        lightboxNext.addEventListener('click', function() {
            lightboxNavigate(1);
        });
    }

    // Focus management - track last focused element
    var lastFocusedElement = null;

    // Keyboard navigation and focus management in lightbox
    imageLightboxModal.on('show.bs.modal', function() {
        lastFocusedElement = document.activeElement;
    });

    imageLightboxModal.on('shown.bs.modal', function() {
        // Focus on close button when opening
        var closeBtn = document.querySelector('.lightbox-close');
        if (closeBtn) closeBtn.focus();

        $(document).on('keydown.lightbox', function(e) {
            if (e.key === 'ArrowLeft') {
                e.preventDefault();
                lightboxNavigate(-1);
            }
            if (e.key === 'ArrowRight') {
                e.preventDefault();
                lightboxNavigate(1);
            }
            if (e.key === 'Escape') {
                imageLightboxModal.modal('hide');
            }
        });
    });

    imageLightboxModal.on('hidden.bs.modal', function() {
        $(document).off('keydown.lightbox');
        // Restore focus to last focused element
        if (lastFocusedElement) {
            lastFocusedElement.focus();
        }
    });

    // Click on backdrop to close
    imageLightboxModal.on('click', function(e) {
        if (e.target === this || $(e.target).hasClass('lightbox-image-container')) {
            imageLightboxModal.modal('hide');
        }
    });

    // Caption expandible
    if (lightboxCaption) {
        lightboxCaption.addEventListener('click', function() {
            this.classList.toggle('expanded');
        });
        lightboxCaption.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.classList.toggle('expanded');
            }
        });
    }

    // Lightbox Use button
    if (lightboxUseBtn) {
        lightboxUseBtn.addEventListener('click', function() {
            var id = this.dataset.id;
            var item = document.querySelector('.historial-item[data-id="' + id + '"]');
            if (item) {
                var useBtn = item.querySelector('.btn-use-image');
                if (useBtn) {
                    imageLightboxModal.modal('hide');
                    setTimeout(function() {
                        handleUseImage(useBtn);
                    }, 300);
                }
            }
        });
    }

    // Lightbox Delete button
    if (lightboxDeleteBtn) {
        lightboxDeleteBtn.addEventListener('click', function() {
            var id = this.dataset.id;
            var item = document.querySelector('.historial-item[data-id="' + id + '"]');
            if (item) {
                var deleteBtn = item.querySelector('.btn-delete-image');
                if (deleteBtn) {
                    imageLightboxModal.modal('hide');
                    setTimeout(function() {
                        handleDeleteImage(deleteBtn);
                    }, 300);
                }
            }
        });
    }

    function handleDeleteImage(button) {
        var historyId = button.dataset.id;
        var item = button.closest('.historial-item');

        confirmModalBody.textContent = '{{ "Are you sure you want to delete this image from history?"|trans }}';
        confirmModalBtn.onclick = function() {
            confirmModal.modal('hide');

            button.disabled = true;
            item.classList.add('removing');

            var url = routes.deleteHistory.replace('HISTORY_ID', historyId);

            fetch(url, {
                method: 'DELETE',
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(function(response) { return response.json(); })
            .then(function(data) {
                if (data.success) {
                    item.style.transition = 'all 0.3s';
                    item.style.opacity = '0';
                    item.style.transform = 'scale(0.8)';
                    setTimeout(function() {
                        item.remove();
                        updateHistorialCount();

                        var remaining = document.querySelectorAll('.historial-item').length;
                        if (remaining === 0) {
                            var grid = document.getElementById('historialGrid');
                            if (grid) {
                                grid.innerHTML =
                                    '<div class="text-center text-muted" id="historialEmpty" style="padding: 30px;">' +
                                        '<i class="fa fa-image fa-3x" style="opacity: 0.3;"></i>' +
                                        '<p style="margin-top: 15px;">{{ "No images in history."|trans }}</p>' +
                                    '</div>';
                            }
                        }
                    }, 300);
                    showImageStatus('{{ "Image deleted from history"|trans }}', 'success');
                } else {
                    showImageStatus(data.error || '{{ "Error deleting image"|trans }}', 'danger');
                    button.disabled = false;
                    item.classList.remove('removing');
                }
            })
            .catch(function(error) {
                showImageStatus('{{ "Network error"|trans }}: ' + error.message, 'danger');
                button.disabled = false;
                item.classList.remove('removing');
            });
        };

        confirmModal.modal('show');
    }

    // Bind use/delete buttons
    document.querySelectorAll('.btn-use-image').forEach(function(btn) {
        btn.addEventListener('click', function() {
            handleUseImage(this);
        });
    });

    document.querySelectorAll('.btn-delete-image').forEach(function(btn) {
        btn.addEventListener('click', function() {
            handleDeleteImage(this);
        });
    });

    // Image overlay click handlers (for viewing full size)
    document.querySelectorAll('.historial-image-overlay').forEach(function(overlay) {
        overlay.addEventListener('click', function() {
            handleImageOverlayClick(this);
        });
    });

    // Initialize
    updateStyleVisibility();
});
</script>
