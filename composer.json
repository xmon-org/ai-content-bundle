{
    "name": "xmon-org/ai-content-bundle",
    "description": "Symfony bundle for AI content generation (text and images) with provider fallback",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "bundle",
        "ai",
        "image-generation",
        "text-generation",
        "pollinations",
        "together-ai",
        "sonata-admin",
        "sonata-media"
    ],
    "authors": [
        {
            "name": "Juanjo GarcÃ­a",
            "email": "juanjogarciae@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-client": "^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^10.0|^11.0",
        "symfony/phpunit-bridge": "^7.0",
        "twig/twig": "^3.0"
    },
    "suggest": {
        "sonata-project/media-bundle": "Required for image storage with SonataMedia (^4.0)",
        "sonata-project/admin-bundle": "Required for admin UI features (^4.0)"
    },
    "autoload": {
        "psr-4": {
            "Xmon\\AiContentBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xmon\\AiContentBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "check": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "setup-hooks": "git config core.hooksPath .githooks",
        "post-install-cmd": "@setup-hooks",
        "post-update-cmd": "@setup-hooks"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
        }
    },
    "minimum-stability": "stable"
}
